{
  "compilerOptions": {
    "target": "es5",        
		"plugins": [{ "name": "typescript-plugin-css-modules" }] , 
    "module": "commonjs",                    
    "lib": [                                 
      "esnext",
      "dom"
    ],  
    "jsx": "react-jsx",                    
    "declaration": true,                 
    "sourceMap": true,                    
    "outDir": "./dist",                     
    "strict": true,                     
    "moduleResolution": "node",              
    "baseUrl": "./",                   
    "paths": {
		  "@src/*": ["src/*"],
		  "@assets/*": ["src/assets/*"],
      "@public/*": ["public/*"], 
      "@hooks/*": ["src/hooks/*"],
      "@styles/*": ["src/styles/*"],
 		},                           
    "typeRoots": [                           
      "node_modules/@types",
      "src/typings.d.ts",
    ],
    "esModuleInterop": true,                   
    "experimentalDecorators": true,       
    "emitDecoratorMetadata": true         
  },
  "exclude": [
    "node_modules",
    "dist"
  ], 
  "include": ["src", "types", "index.tsx"],
}    